{
  "name": "eventask-web",
  "private": true,
  "version": "0.0.0",
  "description": "Modern web application for collaborative task management based on events. Its core focus is organizing work into 8-hour workday sessions, where each task is broken down into specific events that determine its total duration.",
  "author": "Agustin Moya",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:preview": "vite build --mode preview",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "bash -c 'pnpm run typecheck'"
    ],
    "src/**/*.{test,spec}.{ts,tsx}": [
      "vitest related --run"
    ]
  },
  "dependencies": {
    "@dnd-kit/core": "6.3.1",
    "@dnd-kit/modifiers": "9.0.0",
    "@dnd-kit/sortable": "10.0.0",
    "@react-oauth/google": "0.12.2",
    "@reduxjs/toolkit": "2.5.1",
    "clsx": "2.1.1",
    "dayjs": "1.11.13",
    "fast-deep-equal": "3.1.3",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-redux": "9.2.0",
    "react-router-dom": "6.28.1",
    "socket.io-client": "4.7.5"
  },
  "devDependencies": {
    "@commitlint/cli": "20.2.0",
    "@commitlint/config-conventional": "20.2.0",
    "@eslint/js": "9.15.0",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@vitejs/plugin-react-swc": "3.5.0",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "9.15.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-prettier": "5.4.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "eslint-plugin-react-refresh": "0.4.14",
    "globals": "15.12.0",
    "happy-dom": "18.0.1",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "3.5.3",
    "typescript": "5.6.2",
    "typescript-eslint": "8.15.0",
    "vite": "6.0.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
}